<h2>All Heroines</h2>

<%= form_tag(powers_path, method: "get") do %>
  <%= label_tag(:power, "Search for: ") %>
  <%= text_field_tag(:power, params[:power]) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>

<%= button_to "Create New Heroine", new_heroine_path, :method => :get %>
