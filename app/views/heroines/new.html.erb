<h2>New Heroine</h2>
<% if @heroine.errors.any? %>
  <div id="error_explanation">
    <h4>
      <font color="#FF0000"><%= pluralize(@heroine.errors.count, "error") %>
      prohibited this heroine from being saved:</font>
    </h4>

    <ul>
    <% @heroine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @heroine do |f| %>
  <%= f.label :name %>  <%= f.text_field :name %><br><br>
  <%= f.label :super_name %>  <%= f.text_field :super_name %><br><br>
  <%= f.label :power_id %>  <%= f.collection_select :power_id, Power.all, :id, :name %><br><br>
  <%= f.submit %>
<% end %>
<br><br>
<p><%= link_to "Heroine Index", heroines_path %></p>
